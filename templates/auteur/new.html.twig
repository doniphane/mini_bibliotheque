{% extends 'base.html.twig' %}
{% block title %}Nouvel Auteur{% endblock %}
{% block body %}
<h1>Ajouter un nouvel auteur</h1>
{{ form_start(form) }}

<div class="mb-3">

{{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-
label'}}) }}

{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
{{ form_errors(form.nom) }}
</div>
<div class="mb-3">

{{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-
label'}}) }}

{{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
{{ form_errors(form.prenom) }}
</div>
<button type="submit" class="btn btn-success">Enregistrer</button>
<a href="{{ path('app_auteur_index') }}" class="btn btn-secondary">Retour à
la liste</a>
{{ form_end(form) }}
{% endblock %}