{% extends 'base.html.twig' %}
{% block title %}Liste des Livres{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
<h1>Liste des Livres</h1>
<a href="{{ path('app_livre_new') }}" class="btn btn-success">Ajouter un
livre</a>
</div>
{% if livres is empty %}
<div class="alert alert-info">
Aucun livre trouvé. <a href="{{ path('app_livre_new') }}">Ajoutez le
premier livre</a>.
</div>
{% else %}
<div class="table-responsive">
<table class="table table-striped">
<thead>
<tr>
<th>ID</th>
<th>Titre</th>
<th>Année</th>
<th>Auteur</th>
<th>Actions</th>
</tr>
</thead>
<tbody>
{% for livre in livres %}
<tr>
<td>{{ livre.id }}</td>
<td>{{ livre.titre }}</td>
<td>{{ livre.annee }}</td>
<td>
{% if livre.auteur %}
<a href="{{ path('app_auteur_show', {'id':
livre.auteur.id}) }}">
{{ livre.auteur.prenom }}
{{ livre.auteur.nom }}
</a>
{% else %}
<span class="text-muted">Aucun auteur</span>
{% endif %}
</td>
<td>
<a href="{{ path('app_livre_show', {'id': livre.id})
}}" class="btn btn-info btn-sm">Voir</a>
<a href="{{ path('app_livre_edit', {'id': livre.id})
}}" class="btn btn-warning btn-sm">Modifier</a>
<form method="post"
action="{{ path('app_livre_delete', {'id': livre.id}) }}" style="display:
inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce
livre ?')">
<input type="hidden" name="_token"
value="{{ csrf_token('delete' ~ livre.id) }}">

<button class="btn btn-danger btn-
sm">Supprimer</button>

</form>
</td>
</tr>
{% endfor %}
</tbody>
</table>
</div>
{% endif %}
{% endblock %}