{% extends 'base.html.twig' %}

{% block title %}Nouveau Livre{% endblock %}

{% block body %}
<h1>Ajouter un nouveau livre</h1>

{{ form_start(form) }}

<div class="mb-3">
    {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.titre) }}
</div>

<div class="mb-3">
    {{ form_label(form.annee, 'Année', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.annee, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.annee) }}
</div>

<div class="mb-3">
    {{ form_label(form.auteur, 'Auteur', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.auteur, {'attr': {'class': 'form-select'}}) }}
    {{ form_errors(form.auteur) }}
</div>

<button type="submit" class="btn btn-success">Enregistrer</button>
<a href="{{ path('app_livre_index') }}" class="btn btn-secondary">Retour à la liste</a>

{{ form_end(form) }}
{% endblock %}